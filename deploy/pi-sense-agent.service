[Unit]
Description=SenseHAT Edge Agent
After=network-online.target
Wants=network-online.target

[Service]
User=pi
WorkingDirectory=/opt/pi-sense-agent
ExecStart=/usr/bin/python3 /opt/pi-sense-agent/agent.py --config /etc/pi-sense-agent/config.yaml
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
